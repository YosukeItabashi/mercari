.header-wrapper
= render "header"
.banner
  = image_tag("main/banner.jpg", class: "banner__img")

.item-detail
  .l-container
    .l-content
      .l-content__container
        %h2.item-detail-name
          = @item.name
        .item-content
          .item-content__main-photo
            = image_tag @item.image
          .item-content__sub-photo
            = image_tag @item.image
          .item-content__sub-photo
            = image_tag @item.image
          .item-content__sub-photo
            = image_tag @item.image
          .item-content__sub-photo
            = image_tag @item.image
        %table.item-detail-table
          %tbody
            %tr
              %th
                出品者
              %td
                = link_to "#{@user.nickname}", ""
                .item-user-rating
                  %i.icon-good
                .item-user-rating
                  %i.icon-normal
                .item-user-rating
                  %i.icon-bad
            %tr
              %th
                カテゴリー
              %td
                = link_to "#{@item.category}", ""
            %tr
              %th
                商品の状態
              %td
                = @item.state
            %tr
              %th
                配送元地域
              %td
                = @item.region
            %tr
              %th
                配送の目安
              %td
                = @item.shipping_date

      .item-detail-price
        %span.item-detail-price__bold
          ¥
          =@item.price
        %span.item-detail-price__shipping-fee
          送料込み
      .item-buy-btn
        = link_to "購入する", "", class: ""
      .item-description
        %p
          = simple_format(@item.description)

      .item-button-container
        .item-button-left
          %button.item-button-like
            %i.icon-like-border
            %span
              いいね!
        .item-button-right
          .item-button-report
            = link_to "不適切な商品の報告", "", class: "item-button"
    .l-side
      .l-visible-large
        = image_tag("items/side_banner.jpg")

.bottom-dl-area-wrapper
= render "bottom-dl-area"
.fotter-wrapper
=render "fotter"
