.default-container
  %header
    .logo-and-search.clearfix
      =link_to root_path do
        = image_tag("header/logo.svg", class: "logo-and-search__logo left-float")
      .search
        %form.logo-and-search__search.right-float
          %input{value:"", placeholder:"キーワードから探す" }
          %i.fa.fa-search
    .lists.clearfix
      .lists__left.left-float
        %ul
          %li.categories
            %h2
              = link_to items_path do
                カテゴリー
          %li.brands
            %h2
              = link_to items_path do
                ブランド
      .signin-and-signup.right-float
        %ul.account
          - if user_signed_in?
            %li.signin-btn
              = link_to "マイページ", "/users/#{current_user.id}", class: "signin-btn__text"
          - else
            %li.signin-btn
              = link_to "ログイン", user_session_path, class: "signin-btn__text"
            %li.signup-btn
              = link_to "新規会員登録", new_user_registration_path, class: "signup-btn__text"
          %end

