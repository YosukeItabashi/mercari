=render "header"
  .single-main
    .login-panel
      .login-form-for
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            = f.label "ニックネーム"
            %br/
            = f.text_field :nickname, autofocus: true
          .field
            = f.label "メールアドレス"
            %br/
            = f.email_field :email, autofocus: true
          .field
            = f.label "パスワード"
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} 文字以上)
            %br/
            = f.password_field :password, autocomplete: "off"
          .field
            = f.label "パスワード(確認用)"
            %br/
            = f.password_field :password_confirmation, autocomplete: "off"
          .actions
            = f.submit "Sign up", class: "login_btn"
      .form-after
        =link_to "" do
          パスワードをお忘れの方
  .fotter-gray
    .fotter-gray__box
      %nav
        %ul
          %li
            = link_to "" do
              プライバシーポリシー
          %li
            = link_to "" do
              利用規約
          %li
            = link_to "" do
              特定商取引に関する表記

      = link_to "", class: "fotter-logo" do
        =image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?1324730246")
      %p.fotter__copyright © 2017 Mercari

